.users {
  table-layout: fixed;
  width: calc(100% - 300px);
  white-space: nowrap;
  border 0
  display block
  margin 0 auto
}
/* Column widths are based on these cells */
.row-name {
  width: 10%;
}
.row-sex {
  width: 40%;
}
.row-birthplace {
  width: 30%;
}
.row-role {
  width: 20%;
}
.users td {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.users th {
  background: #333
  color: white;
}
.users td,
.users th {
  text-align: center;
  padding: 5px 10px;
}
